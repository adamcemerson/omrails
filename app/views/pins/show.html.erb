<div class="row">
	<div class="Span6 offset3">
		<div class="well">
			<%= image_tag @pin.image %>
		<p>
  			<%= @pin.description %>
  	</p>
  	<p>
  			<%= @pin.user.name %>
  	</p>
  	<% if current_user == @pin.user %>
  	<p>
  			<%= link_to 'Edit', edit_pin_path(@pin) %> |
				<%= link_to 'Back', pins_path %>
				<% end %>
		</p>
		</div>
	</div>
</div>


